<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="기본동작을 보여주는 화면"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="45dp" />

        <Button
            android:id="@+id/dongjak1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/dongjac2"
            android:layout_centerHorizontal="true"
            android:layout_column="0"
            android:layout_marginBottom="52dp"
            android:layout_row="2"
            android:onClick="onClickdongjak1"
            android:text="초급동작" />

        <Button
            android:id="@+id/dongjac2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/dongjac3"
            android:layout_alignStart="@+id/dongjak1"
            android:layout_column="0"
            android:layout_marginBottom="51dp"
            android:layout_row="3"
            android:onClick="onClickdongjak2"
            android:text="중급동작" />

        <Button
            android:id="@+id/dongjac3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/dongjac2"
            android:layout_column="0"
            android:layout_marginBottom="113dp"
            android:layout_row="7"
            android:onClick="onClickdongjak3"
            android:text="고급동작" />

    </RelativeLayout>

</LinearLayout>