<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="26dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/tap1btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center_vertical"
            android:onClick="onClickDongjak"
            android:text="탭1" />


        <Button
            android:id="@+id/tap2btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center_vertical"
            android:onClick="onClickDongjak"
            android:text="탭2" />

        <Button
            android:id="@+id/hopsubtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center_vertical"
            android:onClick="onClickDongjak"
            android:text="홉 셔플" />

        <Button
            android:id="@+id/heeldrbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center_vertical"
            android:onClick="onClickDongjak"
            android:text="힐 드롭" />

        <Button
            android:id="@+id/dikbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center_vertical"
            android:onClick="onClickDongjak"
            android:text="딕" />

        <Button
            android:id="@+id/ballchbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center_vertical"
            android:onClick="onClickDongjak"
            android:text="볼 체인지" />

        <Button
            android:id="@+id/balldrbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center_vertical"
            android:onClick="onClickDongjak"
            android:text="볼 드롭" />

        <Button
            android:id="@+id/stepbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center_vertical"
            android:onClick="onClickDongjak"
            android:text="스텝" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="초급동작" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/linearLayout"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/linearLayout">

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ToggleButton"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </LinearLayout>
</RelativeLayout>